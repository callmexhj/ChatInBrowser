{
    "manifest_version": 3,
    "name": "ChatInBrowser",
    "description": "Chat With LLM In Your Browser!",
    "version": "1.0.1",
    "action": {
        "default_popup": "index.html",
        "default_icon": "chatIco.png",
        "default_title": "ChatInBrowser"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "webRequest",
        "clipboardWrite",
        "clipboardRead",
        "contextMenus"
    ]
}